rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to product information, but restricts writes to authenticated users.
     * @path /products/{productId}
     * @allow get, list: Anyone can read the product data.
     * @allow create: An authenticated user can create a product.
     * @allow update, delete: An authenticated user can update or delete a product they own.
     * @deny create: An unauthenticated user cannot create a product.
     * @deny update: An unauthenticated user cannot update a product.
     * @deny delete: An unauthenticated user cannot delete a product.
     * @principle Public read, owner-only write access. Validates the 'id' on create and enforces immutability on update.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows public read access to label information, but restricts writes to authenticated users.
     * @path /labels/{labelId}
     * @allow get, list: Anyone can read the label data.
     * @allow create: An authenticated user can create a label.
     * @allow update, delete: An authenticated user can update or delete a label they own.
     * @deny create: An unauthenticated user cannot create a label.
     * @deny update: An unauthenticated user cannot update a label.
     * @deny delete: An unauthenticated user cannot delete a label.
     * @principle Public read, owner-only write access. Validates the 'id' on create and enforces immutability on update.
     */
    match /labels/{labelId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows authenticated users to create command logs, but prevents updates and deletes.
     * @path /command_logs/{commandLogId}
     * @allow create: An authenticated user can create a command log.
     * @deny get: Getting specific command logs is disallowed.
     * @deny list: Listing command logs is disallowed.
     * @deny update: Updating command logs is disallowed.
     * @deny delete: Deleting command logs is disallowed.
     * @principle Append-only log with authenticated user access.
     */
    match /command_logs/{commandLogId} {
      allow get, list: if false;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Allows public read access to theme information, but restricts writes to authenticated users.
     * @path /themes/{themeId}
     * @allow get, list: Anyone can read the theme data.
     * @allow create: An authenticated user can create a theme.
     * @allow update, delete: An authenticated user can update or delete a theme they own.
     * @deny create: An unauthenticated user cannot create a theme.
     * @deny update: An unauthenticated user cannot update a theme.
     * @deny delete: An unauthenticated user cannot delete a theme.
     * @principle Public read, owner-only write access. Validates the 'id' on create and enforces immutability on update.
     */
    match /themes/{themeId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows public read access to product label designs, but restricts writes to authenticated users.
     * @path /product_label_designs/{designLinkId}
     * @allow get, list: Anyone can read the design link data.
     * @allow create: An authenticated user can create a design link.
     * @allow update, delete: An authenticated user can update or delete a design link they own.
     * @deny create: An unauthenticated user cannot create a design link.
     * @deny update: An unauthenticated user cannot update a design link.
     * @deny delete: An unauthenticated user cannot delete a design link.
     * @principle Public read, owner-only write access. Validates the 'id' on create and enforces immutability on update.
     */
    match /product_label_designs/{designLinkId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // =========================================================
    // Helper functions
    // =========================================================

    /**
     * @description Checks if the request is authenticated.
     * @return {bool} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is authenticated and the user ID matches the provided user ID.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the request is authenticated and the user ID matches, false otherwise.
     */
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is authenticated, the user ID matches the provided user ID, and the resource exists.
     * @param {string} userId The user ID to check against.
     * @return {bool} True if the request is authenticated, the user ID matches, and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }
  }
}